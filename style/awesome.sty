% tsinghua purple
\definecolor{tsinghua-purple}{HTML}{660874}
\definefontfamily{sourcesanspro}[
    Path=font/,
    UprightFont=*-Regular,
    BoldFont=*-Bold,
    ItalicFont=*-It,
    BoldItalicFont=*-BoldIt,
]{SourceSansPro}
\definefontfamily{sourcesansprolight}[
    Path=font/,
    UprightFont=*-Light,
    BoldFont=*-SemiBold,
    ItalicFont=*-LightIt,
    BoldItalicFont=*-SemiBoldIt,
]{SourceSansPro}
\definefontfamily{sourceserifpro}[
    Path=font/,
    UprightFont=*-Regular,
    BoldFont=*-Bold,
    ItalicFont=*-It,
    BoldItalicFont=*-BoldIt,
]{SourceSerifPro}
\definefontfamily{sourceserifprolight}[
    Path=font/,
    UprightFont=*-Light,
    BoldFont=*-SemiBold,
    ItalicFont=*-LightIt,
    BoldItalicFont=*-SemiBoldIt,
]{SourceSerifPro}
% set colors
\colorlet{normal}   {darkgray}
\colorlet{light}    {gray}
\colorlet{lighter}  {lightgray}
\colorlet{theme}    {tsinghua-purple}
% set font
\setdefaultfontfamily{sourceserifpro}
\setdefaultsansfamily{sourcesanspro}
% set styles
\setStyle{name}{fontsize}{32pt}
\setStyle{firstname}{color}{light}
\setStyle{lastname}{fontshape}{\bfseries}
\updateStyle{role}{8pt, {}, \scshape, theme}
\updateStyle{address}{8pt, {}, \itshape, lighter}
\setStyle{socials}{fontsize}{8pt}
\updateStyle{footer}{8pt, {}, \scshape, lighter}

\newSocialIcon{Email}{\faEnvelope}
\newSocialIcon{Phone}{\faPhone}
\newSocialIcon{Homepage}{\faHome}
\newSocialIcon{Googlescholar}{\aiGoogleScholar}
\newSocialIcon{Github}{\faGithub}
\newSocialIcon{GoogleScholar}{\aiGoogleScholar}

\def\awesomestyle#1#2#3#4{%
    {\color{theme}#1#2#3#4}%
}
% awesome vertical line
\def\awesomeline{\leavevmode\leaders\hrule\@height1pt\hfill \kern\z@}
\updateStyle{section}{16pt, {}, \bfseries,  {}, \awesomestyle, \awesomeline}
\updateBox{section}{v, 2ex, 1ex}
\updateStyle{subsection}{12pt, {}, \bfseries\scshape}
\updateBox{subsection}{v, 1ex, .5ex}
\updateBox{entry}{v, .5ex, 0ex}
\updateStyle{entrytitle}{12pt, {}, \bfseries}
\updateStyle{entrysubtitle}{10pt, {}, \scshape, light}
\updateStyle{entrycomment}{10pt, {}, \slshape, theme}
\updateStyle{entrysubcomment}{10pt, {}, \slshape, light}
